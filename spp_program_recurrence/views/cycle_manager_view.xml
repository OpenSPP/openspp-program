<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="inherit_view_cycle_manager_default_form" model="ir.ui.view">
        <field name="name">inherit_view_cycle_manager_default_form</field>
        <field name="model">g2p.cycle.manager.default</field>
        <field name="inherit_id" ref="g2p_programs.view_cycle_manager_default_form" />
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/group" position="replace">
                <group string="Cycle Settings" name="cycle_settings">
                    <group>
                        <field name="auto_approve_entitlements" />
                        <field
                            name="approver_group_id"
                            options="{'no_open':True,'no_create':True,'no_create_edit':True}"
                            domain="[('category_id','=',%(g2p_registry_base.openg2p_module)d)]"
                            required="1"
                        />
                    </group>
                    <group>
                        <label for="cycle_duration" />
                        <span>
                            <div class="o_col">
                                <div class="o_row">
                                    <field name="cycle_duration" />
                                    <field name="rrule_type" />
                                </div>
                            </div>
                        </span>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
