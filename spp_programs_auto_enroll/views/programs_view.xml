<odoo>
    <record id="view_program_list_custom_spp_form_auto_enroll" model="ir.ui.view">
        <field name="name">view_program_list_custom_spp_form_auto_enroll</field>
        <field name="model">g2p.program</field>
        <field name="inherit_id" ref="g2p_programs.view_program_list_form" />
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='accounting']" position="after">
                <group string="Auto Enroll" colspan="4" col="4">
                    <field name="auto_enroll" colspan="2" />
                    <field
                        name="auto_enroll_status"
                        colspan="2"
                        attrs="{'invisible':[('auto_enroll','=',False)]}"
                    />
                    <field name="last_updated_date" colspan="4" />
                </group>
            </xpath>
        </field>
    </record>

</odoo>
