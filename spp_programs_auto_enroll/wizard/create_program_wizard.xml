<odoo>
    <record id="create_program_wizard_form_view_spp_auto_enroll" model="ir.ui.view">
        <field name="name">create_program_wizard_form_view_spp_auto_enroll</field>
        <field name="model">g2p.program.create.wizard</field>
        <field name="priority">1000</field>
        <field name="inherit_id" ref="g2p_programs.create_program_wizard_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='entitlement']" position="after">
                <page string="Auto Enroll">
                    <group>
                        <group>
                            <field name="auto_enroll" colspan="2" />
                        </group>
                        <group>
                            <field name="auto_enroll_status" colspan="2" attrs="{'invisible':[('auto_enroll','=',False)]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
